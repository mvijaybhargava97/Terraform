  pipeline {
    // agent {
    //    node {
    //      label "master"
    //    } 
    // }
    agent any

    stages {
    //   stage('fetch_latest_code') {
    //     steps {
    //       git credentialsId: '17371c59-6b11-42c7-bb25-a37a9febb4db', url: 'https://github.com/PrashantBhatasana/terraform-jenkins-ec2'
    //     }
    //   }

      stage('Terraform INIT and VALIDATE') {
        steps {
          bat 'cd "Configuration Files"'
          bat 'terraform init'
          bat 'terraform validate'  
        }      
      }

      stage('Plan Approval') {
        steps {
          script {
            def userInput = input(id: 'confirm', message: 'Plan Terraform?', parameters: [ [$class: 'BooleanParameterDefinition', defaultValue: false, description: 'Plan terraform', name: 'confirm'] ])
          }
        }
      }

      stage('Terraform PLAN') {
        steps {
          bat 'cd "Configuration Files"'
          bat 'terraform plan -out=tf.plan'
        }
      }

      stage('Apply Approval') {
        steps {
          script {
            def userInput = input(id: 'confirm', message: 'Apply Terraform?', parameters: [ [$class: 'BooleanParameterDefinition', defaultValue: false, description: 'Apply terraform', name: 'confirm'] ])
          }
        }
      }

      stage('TF Apply') {
        steps {
          bat 'cd "Configuration Files"'
          bat 'terraform apply --auto-approve'
        }
      }
    } 
  }